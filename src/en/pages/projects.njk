---
permalink: /{{ locale }}/{{ navigation[locale].projects}}/index.html
translationKey: "projects"
---

<section class="pg_hro">
  <div class="wrapper">

    <div class="sctn__hdr grd">

      <ul class="spn2 fltrs" data-logic="and">
        <li data-filter="all"><h6 class="link">All</h6><sub id="all-prjcts"></sub></li>
        <li data-filter=".identity"><h6 class="link">Identity</h6><sub id="dntty-prjcts"></sub></li>
        <li data-filter=".communication"><h6 class="link">Communication</h6><sub id="cmmnctn-prjcts"></sub></li>
        <li data-filter=".digital"><h6 class="link">Digital</h6><sub id="dgtl-prjcts"></sub></li>
        <li data-filter=".interior"><h6 class="link">Interior</h6><sub id="ntrr-prjcts"></sub></li>
      </ul>

    </div>

  </div>
</section>


<section class="">
  <div class="wrapper_w_img">

    <div>

      {% for post in collections.posts_en | reverse %}
        {% if loop.first %}<ul class="grd prjcts">{% endif %}
          {% set counter = ( counter | default(0) ) + 1 %}
            <li class="item__{{ counter }} prjct mix {{ post.data.tags | join(' ') }}">
              <article>
                <a href="{{- post.url -}}" id="{{ post.data.slug }}">

                <figure>
                  <picture class="lazy lazy_initial cs_tsr">
                    <source srcset="/assets/img/tiny/{{ post.data.featuredImage }}" media="(min-width: 1025px)">
                    <source srcset="/assets/img/tiny/{{ post.data.featuredImage }}?nf_resize=fit&w=1024" media="(min-width: 769px)">
                    <source srcset="/assets/img/tiny/{{ post.data.featuredImage }}?nf_resize=fit&w=768" media="(min-width: 481px)">

                    <img src="/assets/img/tiny/{{ post.data.featuredImage }}?nf_resize=fit&w=480" alt="{{ post.data.title }} â€“ {{ post.data.description }}" />
                  </picture>

                  <figcaption>
                    <span class="ttl">
                      {{ post.data.title }} <br>
                      <!--<span>{{ post.data.description }}</span>-->
                      <svg class="teaser_btn">
                        <use xlink:href="#teaser_btn"></use>
                      </svg>
                    </span>
                  </figcaption>
                </figure>
              </a>
              </article>
            </li>

        {% if loop.last %}</ul>{% endif %}
      {% endfor %}

    </div>

  </div>
</section>
